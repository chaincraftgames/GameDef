{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [
    { "$ref": "/schemas/actions/base_action_schema.json" },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": ["deal"]
        },
        "properties": {
          "type": "object",
          "properties": {
            "to_property": {
              "type": ,
              "description": "The name of the player property to which items (e.g. cards) should be added."
            },
            "from_property": {
              "type": "string",
              "description": "The name of the game property from which items (e.g. cards) should be dealt."
            }
          },
          "required": ["to_property", "from_property"]
        }
      },
      "required": ["type", "properties"]
    }
  ]
}