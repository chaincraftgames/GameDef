{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the action"
    },
    "action": {
      "type": "string",
      "description": "Type of the action"
    },
    "properties": {
      "type": "object",
      "description": "Properties specific to the action type",
      "additionalProperties": true
    }
  },
  "required": ["id", "action"]
}