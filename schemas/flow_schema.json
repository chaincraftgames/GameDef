{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "flow",
  "description": "Defines the flow of the game, what the stages are, how rounds are played and end, and how the game ends.",
  "definitions": {
    "endCondition": {
      "description": "End condition for the round",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["rounds_played", "score_limit"]
            },
            "value": {
              "type": ["string", "integer"],
              "description": "Value for the end condition"
            }
          },
          "required": ["type", "value"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["custom"]
            },
            "function": {
              "$ref": "/schemas/references_schema.json#/definitions/function_ref"
            }
          },
          "required": ["type", "function"],
          "additionalProperties": false
        }
      ]
    },
    "flowItem": {
      "oneOf": [
        {
          "description": "The inclusion of a round in the game flow",
          "type": "object",
          "properties": {
            "round": {
              "$ref": "/schemas/references_schema.json#/definitions/round_ref"
            },
            "end_condition": {
              "$ref": "#/definitions/endCondition"
            }
          },
          "required": ["round", "end_condition"]
        },
        {
          "description": "A repeating sequence of rounds in the game flow",
          "type": "object",
          "properties": {
            "repeat": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/flowItem"
              }
            }
          },
          "required": ["repeat"]
        },
        {
          "description": "An action in the game flow",
          "type": "object",
          "properties": {
            "action": {
              "$ref": "/schemas/references_schema.json#/definitions/action_ref"
            }
          },
          "required": ["action"]
        }
      ]
    }
  },
  "type": "array",
  "allOf": [
    {
      "items": [
        {
          "type": "string",
          "enum": ["start"]
        }
      ]
    },
    {
      "items": {
        "$ref": "#/definitions/flowItem"
      },
      "minItems": 1
    },
    {
      "items": [
        {
          "type": "string",
          "enum": ["end"]
        }
      ]
    }
  ],
  "minItems": 3
}